<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('libs/semantic-ui/semantic.min.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div class="ui bottom fixed five item large menu">
    <a class="item" href="{{ path('timer') }}">
        <i class="clock outline icon"></i>
    </a>
    <a class="item" href="{{ path('calendar') }}">
        <i class="calendar alternate icon"></i>
    </a>
    <a class="item" href="{{ path('alert') }}">
        <i class="exclamation icon"></i>
    </a>
    <a class="item" href="{{ path('profile') }}">
        <i class="user outline icon"></i>
    </a>
    <a class="item">
        <i class="pills icon"></i>
    </a>
</div>
{% block body %}{% endblock %}

<script src="{{ asset('libs/jquery-3.4.1.min.js') }}"></script>
<script src="{{ asset('libs/semantic-ui/semantic.min.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
